@model IEnumerable<ShoesApp.Entities.TennisShoes>

@{
    ViewData["Title"] = "Tennis Shoes";
}

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Non ci sono scarpe disponibili.
    </div>
}
else
{
    <h1 class="text-center my-3">Tennis Shoes</h1>
    <div class="row">
        @* Per ogni scarpa presente nel modello, crea una card *@
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card d-flex flex-column align-items-center my-3">
                    @*Immagine*@
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.Cover.Url" class="card-img-top" alt="@item.Name" />
                    </a>
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        @*Nome del prodotto*@
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                            <h5 class="card-title text-center">@item.Name</h5>
                        </a>
                        <div class="text-center">
                            @*Prezzo del prodotto*@
                            <p class="card-text">@item.Price.ToString("C")</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
